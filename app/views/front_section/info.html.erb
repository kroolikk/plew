<div id="tabs">
   <ul>
     <li><a href="#tab-1"><%= t('main.review_label') %></a></li>
     <li><a href="#tab-2"><%= t('main.contact_label') %></a></li>
   </ul>
   <p class="clear"></p>
   <div id="tab-1">
     <%= raw @review.content if @review.present? %>
     <p class="clear"></p>
   </div>
   <div id="tab-2">
     <%= (image_tag @contact.photo.small.url) if @contact.present? && @contact.photo.present? %>
     <%= raw @contact.content if @contact.present? %>
     <p class="clear"></p>
   </div>
   
</div>

