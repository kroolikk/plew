<h1>Albumy zdjęć</h1>
<%= link_to 'Dodaj nowy album', new_gallery_path %>
<br/>
<br/>
<br/>
<table width="100%">
  <tr>
    <th width="30%">Tytuł</th>
    <th width="60%">Zdjęcia</th>
    <th width="10%">Opcje</th>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.title %></td>
    <td>
      <% gallery.photos.each do |photo| %>
	<%= image_tag photo.photo.thumb.url, :title => photo.p_title, :alt => photo.p_title %>
      <% end %>
    </td>
    <td><%= link_to 'Edytuj', edit_gallery_path(gallery) %> <%= link_to 'Usuń', gallery, confirm: 'Czy na pewno chcesz usunąć galerię? ', method: :delete %></td>
  </tr>
<% end %>
</table>
