<!DOCTYPE html>
<html>
  <head>
    <title>Plewiński.com Panel administracyjny</title>
    <%= stylesheet_link_tag "admin", :media => "all" %>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Questrial|Istok+Web&subset=latin,latin-ext" %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  
  <% if alert.present? %>
	<div class="flash-error message" id="error"><span><%= t('error') %></span><br><%= alert %></div>
	<script type="text/javascript">
	  $(document).ready(function() {
	    $("div.flash-error").delay(5000).slideUp('medium');
	  });
	</script>
      <% end %>
      <% if notice.present?  %>
	<div class="flash-notice message" id="notice"><span><%= t('success') %></span><br><%= notice %></div>
	<script type="text/javascript">
	  $(document).ready(function() {
	    $("div.flash-notice").delay(5000).slideUp('medium');
	  });
	</script>
      <% end %>
     
    <div class="main-wrapper">
      <header><h1>Panel Administracyjny<%= ' - ' if session[:owner].present? %><%= display_user(session[:owner])%></h1>
      
      <br><br>
      <%= link_to image_tag('pl.png'), set_language_url(:locale => 'pl'), :class => "#{'lang_selected' if session[:locale] == 'pl'}" %> |
	  <%= link_to image_tag('gb.png'), set_language_url(:locale => 'en'), :class => "last-flag #{'lang_selected' if session[:locale] == 'en'}" %>  - <% if session[:locale] == 'pl' %>
      Modyfikujesz teraz <strong>Polskie</strong> treści
      <% else %>
      Modyfikujesz teraz <strong>Angielskie</strong> treści
      <% end %>
	  </header>
	  
      <% if session[:admin_loggedin] %>
	
	<nav class="breadcrumbs">
	  <div style="min-width: 290px; float: left;">
	    Zalogowano jako: <strong><%= session[:account_type] %> | <%= link_to "wyloguj", admin_logout_url %></strong>
	    
	    <span class="next-sep">&nbsp;</span>
	  </div>
	  <%= link_to display_user("os1"), set_owner_url(:owner => 'os1') %> ---
	  <%= link_to display_user("os2"), set_owner_url(:owner => 'os2') %> ---
	  <%= link_to display_user("os3"), set_owner_url(:owner => 'os3') %> ---
	</nav>
	<div class="admin-content">
	  <aside class="main-nav">
	    <ul>
	      <% if session[:owner].present? %>
		<li><%= link_to "Strony informacyjne", pages_url %></li>
		<li><%= link_to "Albumy autorskie", set_gallery_type_url(:type => 'auth') %></li>
		<li><%= link_to "Albumy komercyjne", set_gallery_type_url(:type => 'com') %></li>
	      <% end %>
	    </ul>
	  </aside>
	  
      <% end %>  
      <div class="page-content">
	<%= yield %>
      </div>
      </div>
      <div class="clear"></div>
    </div>
  </body>
</html>
